<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_DPCALENDAR_EVENT_VIEW_DEFAULT_TITLE">
		<message>
			<![CDATA[COM_DPCALENDAR_VIEW_EVENT_DEFAULT_DESC]]>
		</message>
	</layout>
	<fields name="request">
		<fieldset name="request">
				<field 
					name="id" 
					type="event" 
					label="COM_DPCALENDAR_VIEW_EVENT_FIELD_ID_LABEL" 
					description="COM_DPCALENDAR_VIEW_EVENT_FIELD_ID_DESC"
					required="true"/>
		</fieldset>
	</fields>
	<fields name="params"
		addfieldpath="/administrator/components/com_dpcalendar/models/fields">
		<fieldset name="basic">
			<field name="event_date_format" type="text" size="80"
				label="COM_DPCALENDAR_FIELD_CONFIG_EVENT_DATE_FORMAT_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_EVENT_DATE_FORMAT_DESC" />
			<field name="event_time_format" type="text" size="80"
				label="COM_DPCALENDAR_FIELD_CONFIG_EVENT_TIME_FORMAT_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_EVENT_TIME_FORMAT_DESC" />
			<field name="event_output" type="textarea2"
				label="COM_DPCALENDAR_FIELD_CONFIG_EVENT_OUTPUT_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_EVENT_OUTPUT_DESC"
				rows="40" filter="raw">
				<content></content>
				<description>COM_DPCALENDAR_MUSTACHE_DESC</description>
			</field>
		</fieldset>
		<fieldset name="share" label="COM_DPCALENDAR_VIEW_CALENDAR_SHARE_FIELDSET_LABEL">
			<field name="enable_like" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_LIKE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_LIKE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="enable_twitter" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_TWITTER_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_TWITTER_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="enable_google" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_GOOGLE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_ENABLE_GOOGLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
	
			<field type="spacer" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_LABEL"/>
			<field name="layout_style" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_LAYOUT_STYLE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_LAYOUT_STYLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="standard">standard</option>
				<option value="button_count">button_count</option>
				<option value="box_count">box_count</option>
			</field>
			<field name="show_faces" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_SHOW_FACES_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_SHOW_FACES_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="send" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_SEND_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_SEND_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
				<option value="2">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_SEND_STANDALONE</option>
			</field>
			<field name="width_like" type="text" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_WIDTH_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_WIDTH_DESC" />
			<field name="verb_to_display" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_VERB_TO_DISPLAY_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_VERB_TO_DISPLAY_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_VERB_TO_DISPLAY_LIKE</option>
				<option value="0">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_VERB_TO_DISPLAY_RECCOMMEND</option>
			</field>
			<field name="font" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="arial">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_ARIAL</option>
				<option value="lucida grande">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_LUCIDA_GRANDE</option>
				<option value="segoe ui">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_SEGOE_UI</option>
				<option value="tahoma">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_TAHOMA</option>
				<option value="trebuchet ms">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_TREBUCHET_MS</option>
				<option value="verdana">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_FONT_VERDANA</option>
			</field>
			<field name="color_scheme" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_COLOR_SCHEME_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_COLOR_SCHEME_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="light">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_COLOR_SCHEME_LIGHT</option>
				<option value="dark">COM_DPCALENDAR_FIELD_CONFIG_SHARE_FB_LIKE_COLOR_SCHEME_DARK</option>
			</field>
			
			<field type="spacer" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_LABEL"/>
			<field name="size_google" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="small">COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_SMALL</option>
				<option value="medium">COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_MEDIUM</option>
				<option value="standard">COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_STANDARD</option>
				<option value="tall">COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SIZE_GOOGLE_TALL</option>
			</field>
			<field name="show_count_google" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SHOW_COUNT_GOOGLE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_PLUS_SHOW_COUNT_GOOGLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			
			<field type="spacer" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_LABEL"/>
			<field name="show_count_twitter" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_SHOW_COUNT_TWITTER_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_SHOW_COUNT_TWITTER_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="vertical">COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_SHOW_COUNT_TWITTER_VERTICAL</option>
				<option value="horizontal">COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_SHOW_COUNT_TWITTER_HORIZONTAL</option>
				<option value="none">COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_SHOW_COUNT_TWITTER_NONE</option>
			</field>
			<field name="data_via_twitter" type="text" label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_DATA_VIA_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_DATA_VIA_DESC"  size="60"/>
			<field name="data_related_twitter" type="text"
				label="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_DATA_RELATED_LABEL"
				description="COM_DPCALENDAR_FIELD_CONFIG_SHARE_TWITTER_DATA_RELATED_DESC"  size="60"/>
				
			<field type="spacer" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_LABEL"/>
			<field name="comment_system" type="list"
				label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_SYSTEM_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_SYSTEM_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="facebook">COM_DPCALENDAR_FIELD_CONFIG_COMMENT_SYSTEM_FACEBOOK</option>
				<option value="jcomments">COM_DPCALENDAR_FIELD_CONFIG_COMMENT_SYSTEM_JCOMMENTS</option>
			</field>
			
			<field name="comment_fb_width" type="text" size="20" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_WIDTH_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_WIDTH_DESC"/>
			<field name="comment_fb_num_posts" type="text" size="20" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_NUM_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_NUM_DESC"/>
			<field name="comment_fb_app_id" type="text" size="20" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_APP_ID_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_APP_ID_DESC"/>
			<field name="comment_fb_colorscheme" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_SCHEME_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_SCHEME_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="light">COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_SCHEME_LIGHT</option>
				<option value="dark">COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_SCHEME_DARK</option>
			</field>
			<field name="comment_fb_admin_id" type="text" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_ADMIN_ID_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_ADMIN_ID_DESC"/>
			<field name="comment_fb_og_url" type="list" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_URL_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_URL_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
			<field name="comment_fb_og_type" type="text" size="20" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_TYPE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_TYPE_DESC"/>
			<field name="comment_fb_og_image" type="text" size="50" label="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_IMAGE_LABEL" description="COM_DPCALENDAR_FIELD_CONFIG_COMMENT_FB_OGG_IMAGE_DESC"/>
		</fieldset>
	</fields>
</metadata>